    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--inspect-brk",
                "node_modules/.bin/babel",
                "test/index.js",
                "--out-file",
                "test/out2.js"
            ],
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "env": {
                "BABEL_ENV": "debug"
            }
        }
    ]
}